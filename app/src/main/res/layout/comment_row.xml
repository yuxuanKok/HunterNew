<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/commentPic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/commentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="false"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/commentPic"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dateComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/commentName"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/commentPic"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/commentCapt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/commentDelete"
            android:layout_toEndOf="@+id/commentName"
            android:textAlignment="viewStart"
            android:textSize="16sp" />

        <Button
            android:id="@+id/commentDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="-25dp"
            android:layout_marginEnd="-25dp"
            android:background="@drawable/ic_close_black_24dp"
            android:scaleX="0.2"
            android:scaleY="0.4"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>